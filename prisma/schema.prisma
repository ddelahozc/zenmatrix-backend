generator client {
   provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Task {
  id             Int       @id @default(autoincrement())
  proyecto       String
  responsable    String
  titulo         String
  descripcion    String? // String? significa que es opcional
  fechaInicio    DateTime  @default(now()) // Se establece al momento de la creación
  fechaVencimiento DateTime?
  fechaTerminada DateTime?
  prioridad      String    // Podríamos usar un Enum para esto más adelante (e.g., "URGENTE_IMPORTANTE")
  isCompleted    Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}